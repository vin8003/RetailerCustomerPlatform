modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["freetype", "glibcLocales", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Django Server"

[[workflows.workflow]]
name = "Django Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install django djangorestframework djangorestframework-simplejwt django-cors-headers django-filter psycopg2-binary pillow pyotp requests pandas openpyxl && python manage.py makemigrations && python manage.py migrate && python manage.py runserver 0.0.0.0:5000"
waitForPort = 5000
